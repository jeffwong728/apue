      "VTK_MODULE_ENABLE_VTK_ViewsQt" : "NO",
      "VTK_MODULE_ENABLE_VTK_GUISupportMFC" : "NO",
      "VTK_MODULE_ENABLE_VTK_RenderingExternal" : "YES",
      "VTK_FORBID_DOWNLOADS" : "ON",
      "VTK_ENABLE_REMOTE_MODULES" : "OFF",
      "VTK_MODULE_USE_EXTERNAL_VTK_zlib" : "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_tiff" : "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_png" : "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_jpeg" : "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_doubleconversion" : "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_eigen" : "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_freetype" : "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_glew" : "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_hdf5" : "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_libxml2" : "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_lzma" : "OFF",
      "VTK_MODULE_USE_EXTERNAL_VTK_sqlite" : "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_expat" : "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_jsoncpp" : "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_cgns": "OFF",
      "VTK_MODULE_USE_EXTERNAL_VTK_lz4": "OFF",
      "VTK_MODULE_USE_EXTERNAL_VTK_exprtk": "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_libproj": "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_libharu": "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_netcdf": "OFF",
