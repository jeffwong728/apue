      "VTK_MODULE_USE_EXTERNAL_VTK_pegtl": "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_pugixml": "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_theora": "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_utf8" : "ON",
      "VTK_MODULE_USE_EXTERNAL_VTK_ioss" : "OFF",
      "VTK_MODULE_USE_EXTERNAL_VTK_fmt" : "OFF"
