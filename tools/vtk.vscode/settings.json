{
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "cmake.configureSettings": {
      "CMAKE_TOOLCHAIN_FILE": "${env:VCPKG_ROOT_DIR}/scripts/buildsystems/vcpkg.cmake",
      "CMAKE_VERBOSE_MAKEFILE" : false,
      "CMAKE_EXPORT_COMPILE_COMMANDS" : true,
      "CMAKE_SKIP_RPATH" : false,
      "CMAKE_SKIP_INSTALL_RPATH" : false,
      "CMAKE_MINSIZEREL_POSTFIX" : "_minsize",
      "CMAKE_RELWITHDEBINFO_POSTFIX" : "_debinfo",
      "CMAKE_POSITION_INDEPENDENT_CODE" : true,
      "CMAKE_CXX_STANDARD": 17,
      "CMAKE_CXX_STANDARD_REQUIRED": true,
      "CMAKE_CXX_EXTENSIONS": false,
      "VTK_ENABLE_KITS" : "ON",
      "VTK_WRAP_PYTHON" : "OFF",
      "VTK_WRAP_JAVA" : "OFF",
      "VTK_ENABLE_WRAPPING" : "OFF",
      "VTK_BUILD_TESTING" : "OFF",
      "VTK_ENABLE_LOGGING" : "ON",
