{
    "cmake.configureOnOpen": false,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "cmake.sourceDirectory": "${env:SPAM_ROOT_DIR}/3rdparty/opencv",
    "cmake.configureSettings": {
      "CMAKE_TOOLCHAIN_FILE": "${env:VCPKG_ROOT_DIR}/scripts/buildsystems/vcpkg.cmake",
      "CMAKE_VERBOSE_MAKEFILE": false,
      "CMAKE_EXPORT_COMPILE_COMMANDS": true,
      "CMAKE_SKIP_RPATH" : false,
      "CMAKE_SKIP_INSTALL_RPATH" : false,
      "CMAKE_MINSIZEREL_POSTFIX" : "_minsize",
      "CMAKE_RELWITHDEBINFO_POSTFIX" : "_debinfo",
      "MIN_VER_CMAKE" : "3.15",
      "BUILD_DOCS" : false,
      "BUILD_TESTS" : false,
      "BUILD_PERF_TESTS" : false,
      "BUILD_WITH_STATIC_CRT" : false,
      "BUILD_WITH_DEBUG_INFO" : true,
      "BUILD_JASPER" : true,
      "BUILD_JPEG" : true,
      "BUILD_OPENEXR" : true,
      "BUILD_PNG" : true,
      "BUILD_TIFF" : true,
      "BUILD_WEBP" : true,
      "BUILD_ZLIB" : true,
      "BUILD_TBB" : false,
      "BUILD_PROTOBUF" : true,
      "BUILD_opencv_apps" : false,
      "BUILD_opencv_java" : false,
      "BUILD_opencv_js" : false,
      "BUILD_ANDROID_PROJECT" : false,
      "BUILD_ANDROID_EXAMPLES" : false,
      "BUILD_PACKAGE" : false,
      "BUILD_JAVA" : false,
      "PROTOBUF_UPDATE_FILES" : false,
      "UPDATE_PROTO_FILES" : false,
      "ENABLE_PYLINT" : false,
      "ENABLE_FLAKE8" : false,
      "ENABLE_CXX11" : true,
      "WITH_OPENMP" : true,
      "WITH_TBB": true,
      "WITH_Eigen3": true,
      "WITH_VTK" : false,
      "WITH_GTK" : false,
      "WITH_IPP" : true,
      "WITH_PROTOBUF" : true,
      "WITH_OPENJPEG" : false,
      "WITH_LAPACK" : false,
      "BUILD_EXAMPLES" : false,
      "BUILD_opencv_legacy" : false,
      "BUILD_NEW_PYTHON_SUPPORT" : true,
      "BUILD_opencv_python2" : false,
      "BUILD_opencv_python3" : true,
      "BUILD_opencv_dnn" : false,
      "BUILD_opencv_ovis" : false,
      "BUILD_opencv_quality" : false,
      "BUILD_opencv_rgbd" : false,
      "OPENCV_BIN_INSTALL_PATH" : "bin",
      "OPENCV_INCLUDE_INSTALL_PATH" : "include",
      "OPENCV_LIB_INSTALL_PATH" : "lib",
      "OPENCV_3P_LIB_INSTALL_PATH" : "lib",
      "CMAKE_CXX_STANDARD" : 17,
      "CMAKE_CXX_STANDARD_REQUIRED" : true,
      "CMAKE_CXX_EXTENSIONS" : false,
      "CMAKE_DISABLE_FIND_PACKAGE_Git" : true,
      "CMAKE_DISABLE_FIND_PACKAGE_JNI" : true,
      "OPENCV_SKIP_PYTHON_LOADER" : false,
      "OPENCV_EXTRA_MODULES_PATH" : "${env:SPAM_ROOT_DIR}/apex/modules"
    },
    "cmake.cacheInit" : ["../cmake/opencv.cmake"],
    "cmake.preferredGenerators": ["Ninja"],
    "cmake.platform": "x64",
    "cmake.buildDirectory" : "${env:SPAM_ROOT_DIR}/build/opencv/${buildType}",
    "cmake.installPrefix" : "${env:SPAM_ROOT_DIR}/install/opencv",
    "cmake.configureEnvironment": {
      "VCPKG_DIR" : "${env:VCPKG_ROOT_DIR}/installed/x64-windows"
    }
}